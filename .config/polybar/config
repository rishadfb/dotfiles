[colors]
background = black
background-alt = ${xrdb:color8}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:foreground}
primary = ${xrdb:color3}
secondary = ${xrdb:color1}
alert = ${xrdb:color13}

[bar/default]
;monitor = ${env:MONITOR:HDMI-1}
bottom = true
width = 100%
height = 31
offset-y = -1
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = ${xrdb:color13}

border-size = 0
border-color = black

padding-left = 0
padding-right = 1

module-margin-left = 2
module-margin-right = 2

font-0 = Roboto:pixelsize=12;4
font-1 = FontAwesome:style=regular:pixelsize=11;4
font-2 = WeatherIcons:style=regular:pixelsize=11;4
font-3 = MaterialIcons:style=regular:pixelsize=11;4

modules-left = i3 xwindow
modules-center =
modules-right = keyboard memory cpu filesystem pulseaudio-simple battery-combined-udev popup-calendar openweathermap-simple

tray-position = right
tray-padding = 6
tray-transparent = false
tray-background = #000000

wm-restack = i3

override-redirect = false

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/xwindow]
type = internal/xwindow
label = "    /  %title:0:48:...%"

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
; Only show workspaces on the same output as the bar
;pin-workspaces = true
label-mode-padding = 3
label-mode-foreground = black
label-mode-background = #a8df5a
; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 3
; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 3
; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}
; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-foreground = ${xrdb:color8}
label-urgent-background = ${colors.alert}
label-urgent-padding = 3
; Workspace icons
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-default = 

[module/keyboard]
type = internal/xkeyboard
format = <label-indicator>
format-spacing = 0
label-layout = %name%
label-layout-padding = 2
label-layout-background = #bc99ed
label-layout-foreground = black
label-indicator = %name%
label-indicator-padding = 2
label-indicator-background = #8139e8

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "cpu "
format-prefix-foreground = ${xrdb:color3}
format-underline = ${xrdb:color3}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "ram "
format-prefix-foreground = ${xrdb:color2}
format-underline = ${xrdb:color2}
label = %percentage_used%%

[module/filesystem]
type = internal/fs
mount-0 = /
interval = 30
fixed-values = true
format-mounted-prefix = "ssd "
format-mounted-prefix-foreground = ${xrdb:color6}
format-mounted-underline = ${xrdb:color6}
label-mounted = %percentage_used%%

[module/popup-calendar]
type = custom/script
exec = ~/.config/polybar/modules/calendar/popup-calendar
interval = 5
click-left = ~/.config/polybar/modules/calendar/popup-calendar --popup

[module/pulseaudio-simple]
type = custom/script
exec = ~/.config/polybar/modules/pulseaudio/pulseaudio-simple
interval = 3
format-prefix = "vol "
format-prefix-foreground = ${xrdb:color9}
format-prefix-underline = ${xrdb:color9}

[module/battery-combined-udev]
type = custom/script
exec = ~/.config/polybar/modules/battery/battery-combined-udev
tail = true
format-prefix = "bat "
format-prefix-foreground = ${xrdb:color5}
format-prefix-underline = ${xrdb:color5}

[module/openweathermap-simple]
type = custom/script
exec = ~/.config/polybar/modules/openweathermap/openweathermap-simple
exec-if = ping openweathermap.org -c 1
interval = 600
label-font = 3

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5